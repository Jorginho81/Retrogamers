{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Panier{% endblock %}

{% block h1 %}Panier{% endblock %}

{% block body %}
    {% if produits is not empty %}
        <table>
            {% for produit in produits %}
                <li>
                    {{ produit.titre }} - {{ produit.prix }} â‚¬
                    <a class="btn btn-danger" href="{{ path('cart_remove', { 'id': produit.id }) }}">Retirer du panier</a>
                <hr>
                </li>
            {% endfor %}

            <div class="d-grid gap-2 col-6 mx-auto">
            
                <button class="btn btn-warning" type="button">Total : {{ total }}</button>
                <button class="btn btn-success" type="button">Valider et payer ma commande</button>
            </div>
        </table>

    {% else %}
        <p>Votre panier est vide.</p>
    {% endif %}

    <a class="btn btn-primary" href="{{ path('catalogue') }}">Ajouter un produit au panier</a>

{% endblock %}
