{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ produit.titre}}{% endblock %}

{% block h1 %}{{ produit.titre }}{% endblock %}

{% block body %}

    <a class="btn btn-primary" href="{{ path('catalogue') }}">Retour</a>

    <table class="table">
        <tr>
            <th>ID</th>
            <td>{{ produit.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ produit.titre }}</td>
        </tr>
        <tr>
            <th>Prix (€)</th>
            <td>{{ produit.prix }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ produit.description }}</td>
        </tr>
        <tr>
            <th>Catégorie</th>
            <td>
                {% if produit.categorie %}
                    {{ produit.categorie.nom }}
                {% else %}
                    <span class="text-danger fst-italic">Non renseigné</span>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Matière(s)</th>
            <td>
                
                {#
                    un objet produit est composé d'au moins un objet matiere
                    donc produit.matieres est un tableau d'objets matiere
                #}

                {% for matiere in produit.matieres %}
                    {{ matiere.nom }}
                {% endfor %}
                <br>

            
            </td>
            
        </tr>
        
    </table>
<a class="btn btn-success" href="{{ path('cart_add', { 'id': produit.id }) }}">Ajouter au panier</a>

{% endblock %}